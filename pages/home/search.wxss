.head {
  padding: 20rpx;
  border-bottom: 1rpx solid #e4e4e4;
  display: flex;
  align-items: center;
}

.searchBar_wrap {
  width: 600rpx;
  padding: 0 10rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  background-color: #eee;
}

.citySelect {
  display: flex;
  justify-content: center;
  align-items: center;
}

.pickerShow {
  padding: 10rpx;
}

.citySelect image {
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
}

.searchBar_wrap input {
  flex: 1;
  margin-left: 10rpx;
}

.operation {
  margin-left: 20rpx;
}

.history {
  padding: 20rpx 30rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
}

.title .del {
  width: 30rpx;
  height: 30rpx;
  float: right;
  margin: 14rpx 10rpx 0 0;
}

.history_item {
  padding: 10rpx 20rpx;
  background-color: #eee;
  float: left;
  margin: 20rpx 20rpx 20rpx 0;
}

.showResult{
  background-color: #e4e4e4;
}

.result_company {
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #e4e4e4;
}

.result_company .logo {
  width: 120rpx;
  height: 120rpx;
}

.logo image {
  width: 100%;
  height: 100%;
}

.info {
  flex: 1;
  padding-left: 20rpx;
}

.info .name{
  font-size: 32rpx;
  font-weight: 600;
}

.info .trade{
  padding: 10rpx 0;
  color: #666;
  font-size: 28rpx;
}