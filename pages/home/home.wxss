page {
  background-color: #e4e4e4;
}

.head {
  background-color: #fff;
  padding: 10rpx 20rpx;
  overflow: hidden;
  border-bottom: 1rpx solid #eee;
}

.head .search {
  margin: 10rpx;
  float: left;
}

.head .screen {
  float: right;
  margin: 10rpx 20rpx;
  background-color: #eee;
  border-radius: 4px;
  padding: 6rpx 26rpx;
  color: #666;
}

.head .screen.active {
  background-color: #1296db;
  color: #fff;
}

.modal_wrap {
  width: 100%;
  position: fixed;
  top: -700px;
  left: 0;
  opacity: 0;
  z-index: 11;
  background-color: #fff;
}

.modal_wrap .title {
  padding: 10rpx 20rpx;
  margin: 20rpx;
  font-size: 34rpx;
}

.title image {
  width: 30rpx;
  height: 30rpx;
  margin: 20rpx;
  float: right;
}

.citySelect {
  width: 100%;
  height: 90vh;
}

.screenSelect {
  width: 100%;
}

.screenSelect .screenScroll {
  height: 900rpx;
}

.screenSelect .s_part {
  margin-top: 40rpx;
}

.screenSelect .s_title {
  font-size: 32rpx;
  font-weight: 600;
  padding: 20rpx 20rpx 0 20rpx;
}

.screenSelect .s_content {
  padding: 0 20rpx;
  overflow: hidden;
}

.screenSelect .s_content .select_item {
  width: 200rpx;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  float: left;
  margin: 20rpx 20rpx 0 0;
  border-radius: 4px;
  background-color: #eee;
  box-sizing: border-box;
}

.screenSelect .s_content .select_item.active {
  background-color: #fff;
  border: 1rpx solid #1296db;
  color: #1296db;
}

.operation {
  padding: 26rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
}

.operation .clearSelect {
  width: 200rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #eee;
  border-radius: 4px;
}

.operation .confirm {
  width: 440rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #1296db;
  color: #fff;
  border-radius: 4px;
  margin-left: 20rpx;
}

.fit{
  width: 100%;
  height: 100rpx;
}