page{
  background-color: #e4e4e4;
}

.userInfo{
  height: 400rpx;
  background-image: linear-gradient(to bottom, #36cbf6, #4a7deb);
}

.beforLogin{
  width: 100%;
  text-align: center;
  padding-top: 60rpx;
}

.userInfo image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.beforLogin button{
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0;
}

.afterLogin{
  width: 100%;
  text-align: center;
  padding-top: 60rpx;
  color: #fff;
}

.companyLogo{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
}

.showLogo{
  padding: 0 20rpx;
  background: linear-gradient(to right,#f44edd, #b6059f);
  border-radius: 4px;
  box-shadow: 0 0 10px #b6059f;
}

.nav_item{
  padding: 32rpx 26rpx 0 26rpx;
  background-color: #fff;
}

.tap{
  background-color: rgba(0, 0, 0, .1);
}

.nav_item .item_left{
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-right: 20rpx;
}

.item_right{
  overflow: hidden;
  border-bottom: 1rpx solid #e0e0e0;
  padding-bottom: 26rpx;
}

.item_right .item_text{
  float: left;
  font-size: 34rpx;
}

.item_right .item_next{
  float: right;
  width: 50rpx;
  height: 50rpx;
}

.item_right .item_next image{
  width: 100%;
  height: 100%;
}

.forCompany{
  margin-top: 30rpx;
}

.changePwd_wrap{
  background-color: rgba(0, 0, 0, .4);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
}

.changePwd_wrap .changePwd_modal{
  background-color: #fff;
  width: 600rpx;
  height: 800rpx;
  border-radius: 4px;
  padding: 20rpx;
  opacity: 0;
}

.companyLogin{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .4);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login_main{
  width: 540rpx;
  height: 710rpx;
  background-color: #fff;
  border-radius: 4px;
  padding: 20rpx;
}

.close{
  width: 100%;
  text-align: right;
}

.close image{
  width: 30rpx;
  height: 30rpx;
}

.c_title{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 36rpx;
}

.c_row{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 50rpx 0;
}

.c_row .input_border{
  width: 420rpx;
  height: 90rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.c_row .input_border image{
  width: 50rpx;
  height: 50rpx;
}

.c_row .input_border input{
  margin-left: 24rpx;
}

.c_row .input_border.active{
  border: 1rpx solid #1296db;
}

.error_tip{
  height: 40rpx;
  margin-left: 80rpx;
  color: red;
}

.btnLogin{
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 34rpx;
  background: linear-gradient(to right, #39cef9, #4f82ed);
  border-radius: 4px;
  color: #fff;
  padding: 0;
}

.tip{
  width: 100%;
  text-align: center;
  color: #1296db;
}

.fit{
  width: 100%;
  height: 100rpx;
}

.test{
  width: 100rpx;
  height: 200rpx;
  padding: 0;
}